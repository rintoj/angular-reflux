{
  "name": "angular-reflux",
  "version": "0.2.0",
  "description": "A uni-directional (flux-like) data flow architecture using immutability and observables.",
  "main": "dist/reflux.js",
  "types": "dist/reflux.d.ts",
  "scripts": {
    "build": "npm run clean && npm run ngc --",
    "lint": "tslint src/**/*.ts",
    "prepublish": "npm run build",
    "start": "npm run watch",
    "test": "npm test",
    "clean": "rimraf dist && rimraf compiled",
    "tsc": "node_modules/typescript/bin/tsc",
    "tslint": "tslint",
    "ngc": "ngc",
    "watch": "npm run tsc -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rintoj/angular-reflux.git"
  },
  "keywords": [
    "angular 2",
    "angular",
    "flux",
    "reflux",
    "immutable",
    "observable",
    "redux"
  ],
  "author": "Rinto Jose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rintoj/angular-reflux/issues"
  },
  "homepage": "https://github.com/rintoj/angular-reflux#readme",
  "devDependencies": {
    "@angular/common": "2.4.10",
    "@angular/compiler": "2.4.10",
    "@angular/core": "2.4.10",
    "@angular/platform-browser": "2.4.10",
    "@angular/platform-browser-dynamic": "2.4.10",
    "@types/node": "6.0.45",
    "@types/seamless-immutable": "^6.1.2",
    "codelyzer": "1.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rxjs": "5.2.0",
    "seamless-immutable": "7.1.1",
    "tslint": "4.5.1",
    "typescript": "2.2.1",
    "zone.js": "0.8.5"
  }
}
